{
    "root": true,
    "env": {
        "node": true,
        "es2022": true,
        "mocha": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "prettier/prettier": "error",
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "quotes": ["warn", "single", { "avoidEscape": true }],
        "semi": [ "error", "always" ]
    }
}
